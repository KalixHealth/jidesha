{
  "manifest_version": 2,
  "name": "Kalix Desktop Streamer",
  "description": "A simple extension that allows you to stream your desktop into your online sessions in Kalix.",
  "version": "1.0.0",
  "minimum_chrome_version": "34",
  "icons": {
    "16": "kalix-16x16.png",
    "48": "kalix-48x48.png",
    "128": "kalix-128x128.png"
  },
  "background": {
        "scripts": [ "background.js" ],
        "persistent": true
  },
  "permissions": [
      "desktopCapture"
  ],
  "externally_connectable": {
    "matches": [
        "https://www.kalixhealth.com/*",
        "https://app.kalixhealth.com/*",
        "https://test.kalixhealth.com/*",
        "https://testapp.kalixhealth.com/*"
    ]
  }
}
